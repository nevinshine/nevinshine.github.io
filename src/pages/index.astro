---
import BaseHead from '../components/BaseHead.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
---

<!doctype html>
<html lang="en">
    <head>
        <BaseHead title="Nevin Shine | Researcher" description="System Security & AI" />
    </head>
    <body class="bg-black text-green-500 font-mono h-screen flex flex-col items-center justify-center">

        <div class="border border-green-700 p-10 rounded-lg shadow-[0_0_20px_rgba(0,255,0,0.2)] bg-opacity-10 bg-green-900 max-w-2xl w-full">

            <div class="flex justify-between text-xs text-green-800 mb-6 border-b border-green-800 pb-2">
                <span>USER: NEVIN_SHINE</span>
                <span>SYS_TIME: SUNDAY_DAY_09</span>
            </div>

            <h1 class="text-5xl font-bold mb-2 tracking-tighter">NEVIN SHINE</h1>
            <p class="text-xl text-gray-400 mb-8">Junior Researcher // <span class="text-green-400">System Security</span></p>

            <div class="space-y-4">
                <div class="flex items-center space-x-3">
                    <span class="text-green-500">➜</span>
                    <span class="text-gray-300">Current Focus:</span>
                    <span class="bg-green-900 text-green-300 px-2 py-0.5 text-sm rounded">Weightless Neural Networks</span>
                </div>
                <div class="flex items-center space-x-3">
                    <span class="text-green-500">➜</span>
                    <span class="text-gray-300">Status:</span>
                    <span class="animate-pulse text-red-500 font-bold">ACTIVE RESEARCH</span>
                </div>
            </div>

            <div class="mt-10 pt-4 border-t border-green-900 text-sm text-gray-500 animate-pulse">
                _ cursor waiting for input...
            </div>
        </div>

    </body>
</html>
