import ProjectCard from '../components/projects/ProjectCard.astro';

const base = '/my-portfolio';
---

<!doctype html>
<html lang="en">
    <head>
        <BaseHead title="Nevin Shine | Security Engineer (Independent)" description="Independent Research & MLSecOps" />
    </head>
    <body class="bg-[#050505] text-gray-300 font-sans min-h-screen flex justify-center selection:bg-green-900 selection:text-white">
        <div class="w-full max-w-4xl px-6 py-16">

            <div class="flex justify-between items-center text-[10px] font-mono text-neutral-600 mb-12 tracking-widest uppercase">
                <span>Nürnberg (DE) // Kottayam (IN)</span>
                <span class="flex items-center gap-2">
                    <span class="w-1.5 h-1.5 bg-green-500 rounded-full animate-pulse"></span>
                    System Online
                </span>
            </div>

            <header class="mb-16 flex flex-col md:flex-row justify-between items-start md:items-end gap-6">
                <div>
                    <h1 class="text-5xl md:text-6xl font-bold text-white tracking-tighter mb-4">Nevin Shine</h1>
                    <p class="text-xl text-neutral-400 font-light max-w-lg leading-relaxed">
                        Security Engineer (Independent) <span class="text-neutral-700 mx-2">/</span> Independent Researcher
                    </p>
                    <p class="text-sm text-neutral-500 mt-2 font-mono">Focus: Kernel Hardening, ptrace, & Weightless AI</p>
                </div>

                <div class="flex flex-col sm:flex-row gap-3">
                  <a href="https://nevinshine.github.io/research-dossier/" target="_blank" class="group flex items-center gap-3 px-5 py-3 border border-neutral-800 hover:border-green-500 transition-colors duration-300 bg-neutral-900/50 rounded-sm no-underline">
    <div class="text-left">
        <span class="block text-[10px] text-neutral-500 uppercase tracking-wider group-hover:text-green-500/70">External Archive</span>
        <span class="block text-sm font-bold text-gray-200 group-hover:text-green-400">View Research Log</span>
    </div>
</a>
                    <a href={`${base}/cv.pdf`} download class="group flex items-center gap-3 px-5 py-3 border border-neutral-800 hover:border-green-500 transition-colors bg-neutral-900/50 rounded-sm no-underline">
                        <div class="text-left text-neutral-500 group-hover:text-green-500">
                            <span class="block text-[10px] uppercase tracking-wider">Dossier</span>
                            <span class="block text-sm font-bold text-gray-200 group-hover:text-green-400">Download CV</span>
                        </div>
                    </a>
                </div>
            </header>

            <div class="mb-20 grid grid-cols-2 md:grid-cols-4 gap-px bg-neutral-900 border border-neutral-900">
                <div class="bg-[#050505] p-4">
                    <span class="block text-[10px] text-neutral-600 mb-1">CORE</span>
                    <span class="text-sm text-gray-300 font-mono">Linux / Kernel</span>
                </div>
                <div class="bg-[#050505] p-4">
                    <span class="block text-[10px] text-neutral-600 mb-1 font-bold">LANGUAGES</span>
                    <span class="text-sm text-gray-300 font-mono">Python / C / Java</span>
                </div>
                <div class="bg-[#050505] p-4">
                    <span class="block text-[10px] text-neutral-600 mb-1 font-bold font-mono">SECURITY</span>
                    <span class="text-sm text-gray-300 font-mono">DevSecOps / IDS</span>
                </div>
                <div class="bg-[#050505] p-4">
                    <span class="block text-[10px] text-neutral-600 mb-1">RESEARCH</span>
                    <span class="text-sm text-gray-300 font-mono">MLSecOps / AI</span>
                </div>
            </div>

            <section class="mb-24">
                <h2 class="text-xs font-bold text-green-500 mb-8 flex items-center tracking-widest uppercase">// Active Operations <span class="ml-4 h-px bg-neutral-800 flex-grow"></span></h2>
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <ProjectCard title="Sentinel Sandbox" description="A lightweight AI-driven intrusion detection system using Linux ptrace and Weightless Neural Networks." tags={['Python', 'C', 'ptrace', 'Research']} link="https://github.com/nevinshine/sentinel-sandbox" status="Active" />
